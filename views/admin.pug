include includes/head.pug
include includes/menu.pug
.container
	.panel.panel-default
		.panel-heading Új autó hozzáadása
		.panel-body
			.panel.panel-default
				.panel-heading Képek
				.panel.body
					div
						img#carImage.cropImage(src="images/test.jpg")
					div 
						label.btn.btn-default(for="fileUpload") Fájl betöltése
						input(id="fileUpload" type="file" accept="image/*" value="Fájl" onchange="previewFile()" style="display: none")
						button.btn.btn-default(onclick="addPreviewFile()") Hozzáadás
				.panel-body
					#imageContainer
			form#carForm
				.form-group
					label(for='mark') Márka
					select#mark.form-control(name="mark")
						for it in marks
							option #{it.name}
				.form-group
					label(for=age) Kor (Év)
					input.form-control#age(name="age" type="number" value="0" min="0")
				.form-group
					label(for=age) Ár (Ft)
					span.ft
						input.form-control#price(name="price" type="number" value="0" min="0")
				.form-group
					label(for="desc") Leírás
					textarea.form-control#desc(name="desc" rows="5")
				button.btn.btn-default(onclick="postNewCar()") Hozzáadás 
	.panel.panel-default
		.panel-heading Új márka hozzáadaása
		.panel-body
			form#markForm
				.form-group
					label(for="mark-name") Név
					input.form-control#mark-name(name="name")
				button.btn.btn-default(onclick="postNewMark()") Hozzáadás

	script(src="javascripts/admin.js")

include includes/foot.pug